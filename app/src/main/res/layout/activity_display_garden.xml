<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayGardenActivity">

    <Button
        android:id="@+id/buttonAddPlant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/add_plant"
        app:layout_constraintEnd_toStartOf="@+id/button_edit_surface" />

    <Button
        android:id="@+id/buttonEditSurface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/edit_surface"
        app:layout_constraintStart_toEndOf="@+id/button_add_plant" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>