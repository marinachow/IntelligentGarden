<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textHome"
        android:layout_width="240dp"
        android:layout_height="75dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="4dp"
        android:text="ACCUEIL"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/textWelcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="107dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="107dp"
        android:text="Bienvenue dans Smart Guarden"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textHome" />

    <Button
        android:id="@+id/button_garden"
        android:layout_width="317dp"
        android:layout_height="74dp"
        android:backgroundTint="@color/green"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="338dp"
        android:text="Gestion du jardin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_buy"
        android:layout_width="147dp"
        android:layout_height="72dp"
        android:backgroundTint="@color/green"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="243dp"
        android:text="Acheter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_sell"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_sell"
        android:layout_width="147dp"
        android:layout_height="72dp"
        android:backgroundTint="@color/green"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="243dp"
        android:text="Vendre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_buy" />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="147dp"
        android:layout_height="72dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/green"
        android:text="Log Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_buy" />

</androidx.constraintlayout.widget.ConstraintLayout>